mixin carsFiltersItem(folder, src, text)
  .cars-filters__item 
    label.checkbox
      input(type="checkbox")
      span.checkbox__box.checkbox__box--large 
        i
      span.checkbox__text=text
    picture
      source(srcset=`img/content/${folder}/${src}.avif`, type="image/avif")
      source(srcset=`img/content/${folder}/${src}.webp`, type="image/webp")
      img.cars-filters__img(src=`img/content/${folder}/${src}.png`, alt=text)

mixin checkbox(bgExt, text)
  label.checkbox
    input(type="checkbox")
    span.checkbox__box.checkbox__box--large 
      i
    span.product-color(style=`background: ${bgExt}`)
    span.checkbox__text=text
    
mixin radio(text, name)
  label.radio
    input(type="radio", name=name)
    span.radio__circle.radio__circle--large 
    span.radio__text=text


