mixin owningSliderItem(src, alt, title)
    .preview-slider__item
        .preview-slider__img
            img(src=src alt=alt)
        .preview-slider__content
            span.preview-slider__title=title

mixin previewSliderItem(src, alt, title, href, link)
    .preview-slider__item
        .preview-slider__img
            img(src=src alt=alt)
        .preview-slider__content
            span.preview-slider__title=title
            a.preview-slider__link(href=href)=link

