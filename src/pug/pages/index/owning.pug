mixin owningSliderItem(srcWebp, src, alt, title)
    .preview-slider__item
        a.preview-slider__link(href="#")
        .preview-slider__img
            picture
                source(srcset=srcWebp, type="image/webp")
                img(src=src alt=alt)
        .preview-slider__content
            span.preview-slider__title=title

mixin previewSliderItem(srcWebp, src, alt, title, href, text)
    .preview-slider__item
        a.preview-slider__link(href=href)
        .preview-slider__img
            picture
                source(srcset=srcWebp, type="image/webp")
                img(src=src alt=alt)
        .preview-slider__content
            span.preview-slider__title=title
            span.preview-slider__text=text

section.shop#owning
