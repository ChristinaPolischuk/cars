section.contact
    .container
        .contact__content
            p.page-text Want to get in touch? Fill out the form below to send me a message and we will get back to you as soon as possible!
            form.contact-form(style="background-color: #F4F2F2")
                .contact-form__group
                    span.contact-form__error Error!!!!!
                    input.contact-form__field.error(type="text", placeholder="Name")
                .contact-form__group
                    span.contact-form__error
                    input.contact-form__field(type="text", placeholder="E-mail")
                .contact-form__group
                    span.contact-form__error
                    textarea.contact-form__message(placeholder="Message")
                .contact-form__footer
                    .g-recaptcha(data-sitekey="6KepjAsTFFFFFFMqccY0ZiGqc3TEd3YVxo8cHsGX", style="max-width: 100%")
                    button.contact-form__btn.btn.btn--xsmall.js-send-contacts(type="submit") Send