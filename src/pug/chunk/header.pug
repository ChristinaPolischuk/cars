mixin navDropdownItem(srcWebp, src, href="#", title="Innovations")
    a.nav-dropdown__item(href=href)
        picture
            source(srcset=srcWebp, type="image/webp")
            img.nav-dropdown__img(src=src, alt=title)
        span.nav-dropdown__title=title

mixin navMobileItem(srcWebp, src, href="#", title="Innovations")
    a.mobile-menu-dropdown__item(href=href)
        picture
            source(srcset=srcWebp, type="image/webp")
            img.mobile-menu-dropdown__img(src=src alt=title)
        span.mobile-menu-dropdown__title=title

